{
    "name": "app",
    "version": "0.1.0",
    "private": true,
    "homepage": "/",
    "dependencies": {
        "@reach/router": "^1.2.1",
        "apollo-boost": "^0.3.1",
        "apollo-client": "^2.5.1",
        "aws-amplify": "^1.1.26",
        "aws-amplify-react": "^2.3.8",
        "aws-appsync": "^1.7.2",
        "aws-appsync-react": "^1.2.7",
        "graphql": "^14.2.1",
        "graphql-tag": "^2.10.1",
        "react": "^16.8.6",
        "react-apollo": "^2.5.5",
        "react-apollo-hooks": "^0.4.5",
        "react-beautiful-dnd": "^11.0.3",
        "react-dom": "^16.8.6",
        "react-markdown": "^4.0.8",
        "react-scripts": "3.0.0",
        "react-use-form-state": "^0.10.2",
        "typescript-json-schema": "^0.38.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "new-component": "hygen component new --name ",
        "storybook": "start-storybook -p 9009 -s public",
        "build-storybook": "build-storybook -s public -o dist/storybook",
        "build:ci": "npm run build",
        "build-schema": "typescript-json-schema ./amplify/backend/function/publishopportunitylisting/src/api.d.ts WebsiteListingPublish -o ./amplify/backend/function/publishopportunitylisting/src/api.schema.json --required --strictNullChecks"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@storybook/addon-actions": "^5.0.11",
        "@storybook/addon-links": "^5.0.11",
        "@storybook/addons": "^5.0.11",
        "@storybook/react": "^5.0.11",
        "@types/classnames": "^2.2.7",
        "@types/jest": "^24.0.12",
        "@types/node": "^12.0.0",
        "@types/reach__router": "^1.2.4",
        "@types/react": "^16.8.17",
        "@types/react-beautiful-dnd": "^11.0.2",
        "@types/react-dom": "^16.8.4",
        "@types/react-test-renderer": "^16.8.1",
        "@types/storybook__addon-actions": "^3.4.2",
        "@types/storybook__react": "^4.0.1",
        "@types/styled-components": "^4.1.15",
        "babel-loader": "^8.0.5",
        "classnames": "^2.2.6",
        "eslint": "^5.16.0",
        "govuk-react": "^0.7.0",
        "husky": ">=1",
        "hygen": "^4.0.2",
        "lint-staged": ">=8",
        "node-sass": "^4.13.1",
        "prettier": "^1.17.1",
        "react-test-renderer": "^16.8.6",
        "styled-components": "^4.2.0",
        "typescript": "^3.5.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{css,scss,json,md}": [
                "prettier --write",
                "git add"
            ],
            "*.{js,jsx,ts,tsx}": [
                "eslint --fix --max-warnings=0",
                "git add"
            ]
        },
        "ignore": [
            "**/package.json",
            "**/package-lock.json"
        ]
    }
}
